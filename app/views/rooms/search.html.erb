<div class="container">
  <h4 class="pb-4">検索結果：<%= @rooms.count %>件</h4>
  <div class="row">
    <% @rooms.each do |room| %>
      <div class="col-sm-6 col-lg-4 col-xl-3 mb-4 search-result">
        <div class="border">
          <%= link_to(room, class: "text-decoration-none") do %>
            <div><%= image_tag room.room_image.url, class: "room-image" %></div>
            <div class="room-profile">
              <p class="room-profile-name"><%= room.name %></p>
              <p class="room-profile-city"><%= room.address %></p>
              <p class="room-profile-icon">¥<%= room.price %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %> 
  </div> 
</div>