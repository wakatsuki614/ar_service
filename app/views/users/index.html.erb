<div class="wrap">
  <div class="bgi">
    <div class="form-fream">
      <div class="bgc-white">
        <p class="form-area-title mb-4">Potepan Shareでまだ体験したことのない旅をしよう</p>
        <%= form_tag search_path, method: :get do %>
          <div class="index-mb"><%= label_tag 'エリア'%></div>
          <div><%= text_field_tag :search_area, params[:search_area], placeholder: "東京", class: "form-control mb-4" %></div>
          <div><%= submit_tag '探す', class: "form-control btn-primary mb-4" %></div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="m-5">
    <h1 class="section-title">おすすめのエリア</h1>
    <div class="index-f">
      <div class="panel-item">
        <a href="/search?search_area=東京">
          <img class="panel-image" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/img_tokyo.jpg">
          <div class="area">東京</div>
        </a>
      </div>
      <div class="panel-item">
        <a href="/search?search_area=大阪">
          <img class="panel-image" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/img_osaka.jpg">
          <div class="area">大阪</div>
        </a>
      </div>
      <div class="panel-item">
        <a href="/search?search_area=京都">
          <img class="panel-image" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/img_kyoto.jpg">
          <div class="area">京都</div>
        </a>
      </div>
      <div class="panel-item">
        <a href="/search?search_area=札幌">
          <img class="panel-image" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/img_sapporo.jpg">
          <div class="area">札幌</div>
        </a>
      </div>
    </div>
  </div>
</div>