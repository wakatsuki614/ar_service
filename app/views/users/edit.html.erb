<div class="row p-4">
  <aside class="col-md-4 edit-mt">
    <div class="panel panel-default border border-2 edit-br">
      <div class="panel-heading edit-b p-1 cccccc">
        <h3 class="panel-title text-center"><%= @user.nickname %></h3>
      </div>
      <div class="m-3">
        <div class="panel-body al-c">
          <% if current_user.image? %>
            <%= image_tag current_user.image.url, :size => "110x110", class: "d-block mx-auto" %>
          <% else %>
            <%= image_tag("https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg", :size => "110x110", class: "d-block mx-auto") %>
          <% end %>
        </div>
        <%= form_for(@user) do |f| %>
          <div class="form-group mt-2">
            <%= f.file_field :image, class: "edit-w" %>
          </div>
        <% end %>
      </div>
    </div>
  </aside>

  <div class="col-md-8">
    <h1 class="mb-3">プロフィール編集画面</h1>
    <%= form_for(@user) do |f| %>
      <div class="form-group me-3 mb-3">
        <%= f.label :nickname, '名前' %><br>
        <%= f.text_field :nickname, class: 'form-control' %>
      </div>
      <div class="form-group me-3 mb-3">
        <%= f.label :email, 'メールアドレス' %><br>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group me-3 mb-3">
        <%= f.label :introduce, '自己紹介（255文字未満）' %>
        <%= f.text_area :introduce, :maxlength => "255", :size => "80x5", class: 'form-control' %>
      </div>
      <div class="accbox">
        <div class="accshow">
          <div class="form-group me-3 mb-3">
            新しいパスワード（変更する場合のみ入力）<br>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group me-3 mb-3">
            新しいパスワードを再入力（変更する場合のみ入力）<br>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="al-c">
        <%= f.submit '変更する', class: 'btn btn-primary mt-3' %>
      </div>
    <% end %>
  </div>
</div>