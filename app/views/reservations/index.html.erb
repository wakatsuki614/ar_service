<div class="container-fiuld reservation-posts row">
  <h4 class="pb-4">予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr>
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
      </tr>
    </thead>
    <tbody>
      <% @reservations.each do |reservation| %>
        <% if reservation.user_id == current_user.id %>
          <tr>
            <td><%= link_to image_tag(reservation.room.room_image.url, :size => "240x140"), reservation.room %></td>
            <td class="posts-name"><%= link_to reservation.room.name, reservation.room %></td>
            <td class="posts-content"><%= reservation.room.room_introduce %></td>
            <td class="rindex-f">¥ <%= (reservation.end_date - reservation.start_date).to_i * reservation.room.price.to_i * reservation.person_num %></td>
            <td class="rindex-f"><%= reservation.start_date %></td>
            <td class="rindex-f"><%= reservation.end_date %></td>
            <td class="rindex-f"><%= reservation.created_at.strftime("%Y-%-m-%-d %-H:%M") %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
